<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/homecloud_color_bg">
    <RelativeLayout android:id="@+id/layout_title"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content" >
	    <TextView android:id="@+id/textview_title"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerInParent="true"
	        android:textColor="@color/homecloud_color_text_dark"
	        android:text="我的宝贝"
	        android:textSize="30sp"/>
	    <Button android:id="@+id/btn_seacher"
	        android:layout_alignParentRight="true"
	        android:layout_centerVertical="true"
	        android:background="@drawable/file_manager_no_filter_selector"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"/>
	    <View
		    android:layout_toLeftOf="@id/btn_seacher"
		    android:layout_centerVertical="true"
		    android:layout_width="2dip"
	        android:layout_height="90dip"
	        android:layout_marginTop="8dip"
	        android:layout_marginBottom="8dip"
	        android:background="@color/homecloud_color_divider"/>
    </RelativeLayout>
	<View
	    android:layout_below="@id/layout_title" 
	    android:layout_width="match_parent"
        android:layout_height="2dip"
        android:background="@color/homecloud_color_divider"/>
</RelativeLayout>