<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <LinearLayout 
		android:id="@+id/ly_left_view"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content" 
	    android:orientation="vertical">	    
        <LinearLayout 
			android:id="@+id/ly_left_view_up"
	    	android:layout_width="wrap_content"
		    android:layout_height="wrap_content" 
		    android:orientation="horizontal">		    
            <FrameLayout 
                android:layout_width="wrap_content"
		    	android:layout_height="wrap_content">
                <ImageView 
	                android:id="@+id/iv_home_cloud"
		    		android:layout_width="wrap_content"
			    	android:layout_height="wrap_content"
			    	android:background="@drawable/smart_home_cloud"/>
               	<TextView 
		           android:layout_width="wrap_content"
			       android:layout_height="wrap_content"
			       android:layout_gravity="center_horizontal|bottom"
			       android:paddingBottom="16px"
			       android:textSize="@dimen/main_title_cover_text_size"
			       android:textColor="@color/white"  
		           android:text="家庭云"/>
            </FrameLayout>
               
            <FrameLayout 
                android:layout_width="wrap_content"
		    	android:layout_height="wrap_content">
               	<ImageView 
	                android:id="@+id/iv_defend"
		    		android:layout_width="wrap_content"
			    	android:layout_height="wrap_content"
			    	android:background="@drawable/smart_home_defend"/>
               	<TextView 
		           android:layout_width="wrap_content"
			       android:layout_height="wrap_content"
			       android:layout_gravity="center_horizontal|bottom"
			       android:paddingBottom="60px"
			       android:textSize="@dimen/main_title_cover_text_size"
			       android:textColor="@color/white"  
		           android:text="安防"/>
			</FrameLayout>
            	    
    	</LinearLayout>    	
         
        <LinearLayout 
			android:id="@+id/ly_left_view_down"
	    	android:layout_width="wrap_content"
		    android:layout_height="wrap_content" 
		    android:orientation="horizontal"> 		    
            <LinearLayout 
				android:id="@+id/ly_light"
		    	android:layout_width="wrap_content"
			    android:layout_height="wrap_content" 
			    android:orientation="vertical"
			    android:gravity="center_horizontal"
			    android:background="@drawable/smart_home_light">
               	<ToggleButton
				    android:id="@+id/btn_light_set" 
				   	android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_marginTop="80px"
				    android:textOn=""
				    android:textOff=""
				    android:background="@drawable/smart_home_tbtn_background"/>
               	<TextView 
		           android:layout_width="wrap_content"
			       android:layout_height="wrap_content"
			       android:layout_marginTop="30px"
			       android:textSize="@dimen/main_title_cover_text_size"
			       android:textColor="@color/white"  
		           android:text="灯光"/>
            </LinearLayout>	
            
            <FrameLayout 
                android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		    	android:background="@drawable/smart_home_air_condition">               	
               	<TextView 
		           android:layout_width="wrap_content"
			       android:layout_height="wrap_content"
			       android:layout_gravity="top|right"
			       android:paddingTop="40px"
			       android:paddingRight="30px"
			       android:textSize="@dimen/main_title_cover_text_size"
			       android:textColor="@color/white"  
		           android:text="能耗"/>
               	<TextView 
		           android:id="@+id/tv_air_set_temperature"
		           android:layout_width="wrap_content"
			       android:layout_height="wrap_content"
			       android:layout_gravity="center"
			       android:textSize="56px"
			       android:textColor="@color/white"  
		           android:text="16.5℃"/>               	
               	<TextView 
		           android:layout_width="wrap_content"
			       android:layout_height="wrap_content"
			       android:layout_gravity="center_horizontal|bottom"
			       android:paddingBottom="16px"
			       android:textSize="@dimen/main_title_cover_text_size"
			       android:textColor="@color/white"  
		           android:text="空调"/>
			</FrameLayout>
            
            <LinearLayout 
				android:id="@+id/ly_music"
		    	android:layout_width="wrap_content"
			    android:layout_height="wrap_content" 
			    android:orientation="vertical"
			    android:gravity="center_horizontal"
			    android:background="@drawable/smart_home_music">
               	<ToggleButton
				    android:id="@+id/btn_music_set" 
				   	android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_marginTop="80px"
				    android:textOn=""
				    android:textOff=""
				    android:background="@drawable/smart_home_tbtn_background"/>
               	<TextView 
		           android:layout_width="wrap_content"
			       android:layout_height="wrap_content"
			       android:layout_marginTop="30px"
			       android:textSize="@dimen/main_title_cover_text_size"
			       android:textColor="@color/white"  
		           android:text="背景音乐"/>
            </LinearLayout>	    
    	</LinearLayout>	    
    </LinearLayout>
    
    
    <LinearLayout 
		android:id="@+id/ly_right_view"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content" 
	    android:orientation="vertical"
	    android:gravity="center_horizontal"
	    android:background="@drawable/smart_home_device_bg">"
        
        <TextView 
           android:layout_width="wrap_content"
	       android:layout_height="140px"
	       android:gravity="center"
	       android:textSize="@dimen/main_title_cover_text_size"
	       android:textColor="@color/white" 
           android:text="洗衣机"/>        
        <TextView 
           android:layout_width="wrap_content"
	       android:layout_height="140px"
	       android:gravity="center"
	       android:textSize="@dimen/main_title_cover_text_size"
	       android:textColor="@color/white"  
           android:text="热水器"/>
        <TextView 
           android:layout_width="wrap_content"
	       android:layout_height="140px"
	       android:gravity="center"
	       android:textSize="@dimen/main_title_cover_text_size"
	       android:textColor="@color/white" 
           android:text="冰箱"/>        
        <TextView 
           android:layout_width="wrap_content"
	       android:layout_height="140px"
	       android:gravity="center"
	       android:textSize="@dimen/main_title_cover_text_size"
	       android:textColor="@color/white"  
           android:text="空气净化器"/>
        <TextView 
           android:layout_width="wrap_content"
	       android:layout_height="140px"
	       android:gravity="center"
	       android:textSize="@dimen/main_title_cover_text_size"
	       android:textColor="@color/white"  
           android:text="净水器"/>
        <TextView 
           android:layout_width="wrap_content"
	       android:layout_height="140px"
	       android:gravity="center"
	       android:textSize="@dimen/main_title_cover_text_size"
	       android:textColor="@color/white" 
           android:text="电饭煲"/>        
        <TextView 
           android:layout_width="wrap_content"
	       android:layout_height="140px"
	       android:gravity="center"
	       android:textSize="@dimen/main_title_cover_text_size"
	       android:textColor="@color/white"  
           android:text="蒸蛋器"/>
	    
    </LinearLayout>
    
</LinearLayout>