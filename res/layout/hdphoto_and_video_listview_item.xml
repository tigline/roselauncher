<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:columnCount="4"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/gridlayout_item_imageview_margin"
        android:visibility="gone"
        android:layout_columnSpan="4"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/listview_item_margin_top"
            android:textColor="@android:color/black"
            android:textSize="@dimen/listview_text_size_medium" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:layout_gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/detail_head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/homecloud_color_text_dark"
                android:textSize="@dimen/listview_text_size_large"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/detail_tail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/listview_text_margin_large"
                android:textColor="@color/homecloud_color_text_grey"
                android:textSize="@dimen/listview_text_size_small" />
        </LinearLayout>
    </LinearLayout>

    <include
        android:id="@+id/item1"
        layout="@layout/hdphoto_and_video_gridlayout_item" />

    <include
        android:id="@+id/item2"
        layout="@layout/hdphoto_and_video_gridlayout_item" />

    <include
        android:id="@+id/item3"
        layout="@layout/hdphoto_and_video_gridlayout_item" />

    <include
        android:id="@+id/item4"
        layout="@layout/hdphoto_and_video_gridlayout_item" />

</GridLayout>